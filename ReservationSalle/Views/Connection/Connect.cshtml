
@{
    ViewBag.Title = "Connect";
}

<h2>Connect</h2>

<h3>Bienvenue sur notre site, Pour Commencer connectez-vous!</h3>



@model ReservationSalle.Models.User
@{
    bool test = (bool)@ViewData["Authentifie"];
}
@if (test)
{
    <h3> Utilisateur deja connecte avec le login @Model.Login </h3>
    @Html.ActionLink("Cliquerpourvousdeconnecter?", "Deconnexion")
}
else
{
    <h3>Connexion :</h3>
    using (Html.BeginForm())
    {
        <div>
            @Html.Label("Login")
            <br />
            @Html.TextBox("Login")
            <br />
            @Html.ValidationMessage("Login")
        </div>
        <div>
            @Html.Label("Password")
            <br />
            @Html.Password("Password")
            <br />
            @Html.ValidationMessage("Password")
        </div>
        <input type="submit" value="Connexion" />
        <br />

        <p>Vous n'avez pas de compte?</p>
        @Html.ActionLink("Inscription", "Inscrire")
    }
}
@if (Model != null && test == false)
{
    <span>Authentification error</span>
}